{
  "obr": {
    "OBR_MIN_VERSION": "0.2.1",
    "BENCHMARK_FILE_VERSION": "0.3.0"
  },
  "case": {
    "type": "OpenFOAMExternalCase",
    "solver": "icoFoam",
    "case": "lidDrivenCavity3D",
    "origin": "~/data/code/ogl_labbook/base/Lid_driven_cavity-3d/S",
    "git": "https://develop.openfoam.com/committees/hpc.git",
    "build": ["blockMesh", "ln -s fvSolution.fixedNORM system/fvSolution"]
  },
  "variation": {
      "name": "mesh",
      "type": "ReBlockMesh",
      "mapFields": false,
      "dimensions": 3,
      "variants":{"cells": [50, 100]},
      "block": "100 100 100",
      "controlDict": {
        "stationary": false,
        "timeSteps": 3
      },
      "variation": [{
        "name": "matrix_solver",
        "type": "ChangeMatrixSolver",
        "fields": ["p"],
        "defaults": {
          "p" : {
            "minIter": 0,
            "maxIter": 10000,
            "smoother": "none",
            "relTol":  0.0,
            "tolerance":  1e-06,
            "updateSysMatrix": "yes",
            "sort": "yes",
            "verbose": "1",
            "inner": "{solver CG; maxIter 1000;frequency 10;}"
            }
        },
        "variants": {"solver": ["CG", "BiCGStab" ],
                     "preconditioner": ["NoPrecond"],
                     "executor": ["HIP", "DefaultOF"]
	},
        "variation": [{
             "name": "mpiRank",
             "type": "ChangeNumberOfSubdomains",
             "variants": { "numberOfSubdomains": [2, 4, 8, 16, 32, 40] },
             "variant_of": ["DefaultOF", "HIP"],
             "comment": "creates a subvariation of the CG BJ cases for different max block size values"
          }]
      }]
  }
}
