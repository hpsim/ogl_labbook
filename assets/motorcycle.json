{
  "obr": {
    "OBR_MIN_VERSION": "0.2.1",
    "BENCHMARK_FILE_VERSION": "0.3.0"
  },
  "case": {
    "type": "OpenFOAMExternalCase",
    "solver": "simpleFoam",
    "case": "motorcycle",
    "origin": "~/data/code/ogl_labbook/base/HPC_motorbike/",
    "git": "https://develop.openfoam.com/committees/hpc.git"
  },
  "variation": {
      "name": "mesh",
      "type": "ExistingCaseVariants",
      "mapFields": false,
      "dimensions": 3,
      "variants":{"case": [["Small/v1912", "Small"],  ["Medium/v1912", "Medium"], ["Large/v1912", "Large"]]},
      "controlDict": {
        "stationary": true,
        "timeSteps": 20
      },
     "build": ["cp -r 0.org 0", "chmod +x AllmeshS", "chmod +x AllmeshM", "chmod +x AllmeshL", "./AllmeshS", "./AllmeshM","./AllmeshL","potentialFoam -writephi"],
     "variation": [{
      "name": "matrix_solver",
      "type": "ChangeMatrixSolver",
      "fields": ["p"],
      "defaults": {
        "p" : {
          "minIter": 0,
          "relTol":  0.01,
          "tolerance":  1e-07,
          "updateSysMatrix": "yes",
          "sort": "yes",
          "verbose": "1"
          }
      },
      "variants": {"solver": ["CG"],
                   "preconditioner": ["DIC", "BJ", "ISAI", "Multigrid"],
                   "executor": ["${{env.GINKGO_EXECUTOR}}", "DefaultOF"]
      },
      "variation": [{
             "name": "mpiRank_gko",
             "type": "ChangeNumberOfSubdomains",
             "variants": { "numberOfSubdomains": [2, 4, 8, 12, 16] },
             "variant_of": ["${{env.GINKGO_EXECUTOR}}"],
             "comment": "creates a subvariation of the CG BJ cases for different max block size values"
          },
	  {
             "name": "mpiRank_of",
             "type": "ChangeNumberOfSubdomains",
             "variants": { "numberOfSubdomains": ["fullNode"] },
             "variant_of": ["DefaultOF"],
             "comment": "creates a subvariation of the CG BJ cases for different max block size values"
          }
	]
   }]
}
}
